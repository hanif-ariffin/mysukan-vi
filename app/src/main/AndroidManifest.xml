<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="masco.com.mysukan_vi"
    android:versionCode="2"
    android:versionName="0.2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mysukan"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_mysukan"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.MainPageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WinnerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SportDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AdminActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.SponsorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OverallWinnerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".annoucement.AnnouncementActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".annoucement.AddAnnouncementActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>