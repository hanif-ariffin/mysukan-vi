<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_score_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="tremblay412.com.mysukan.NewScoreFragment">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/type_spinner"
            android:layout_below="@+id/sport_spinner"
            android:layout_marginTop="16dp"
            android:text="Type"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="191dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/type_spinner"
            android:layout_alignStart="@+id/sport_spinner"
            android:layout_marginBottom="35dp"
            android:text="Sport"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="124dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="New Score"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/sport_spinner"
            android:layout_width="300dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView4"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="66dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="66dp" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sport_spinner"
            android:layout_alignStart="@+id/sport_spinner"
            android:layout_below="@+id/sport_spinner"
            android:layout_marginTop="34dp" />

        <Button
            android:id="@+id/BTN_Proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:text="Proceed" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

