<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="masco.com.mysukan_vi.fragments.LoginFragment">


    <EditText
        android:id="@+id/fragment_adminpage_login_text_email"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_above="@+id/fragment_adminpage_login_text_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="47dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="@string/fragment_adminpage_login_text_prompt_email_string"
        android:inputType="textPersonName"
        android:text="hello@gmail.com"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_adminpage_login_text_title"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/fragment_adminpage_login_text_password"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_above="@+id/fragment_adminpage_login_button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="@string/fragment_adminpage_login_text_prompt_password_string"
        android:inputType="textPassword"
        android:text="hello12"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_adminpage_login_text_email"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/fragment_adminpage_login_button_login"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_corners"
        android:text="@string/fragment_adminpage_login_button_login_string"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_adminpage_login_text_password"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fragment_adminpage_login_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_adminpage_login_text_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="67dp"
        android:fontFamily="sans-serif"
        android:text="@string/fragment_adminpage_login_text_title_string"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/fragment_adminpage_login_text_title_string" />

</android.support.constraint.ConstraintLayout>
