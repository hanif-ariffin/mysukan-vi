<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/include_item_announcement_time_text"
            android:layout_width="87dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:text="TIME"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/include_item_announcement_title_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/include_item_announcement_time_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/include_item_announcement_message_text"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/include_item_announcement_time_text"
                app:layout_constraintTop_toBottomOf="@+id/include_item_announcement_title_text" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>


