<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="tremblay412.com.mysukan.fragments.adminarea.CreateMatch"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Score"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/submit_score_norm_header"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/team_2_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="61dp" />

        <Spinner
            android:id="@+id/scoreOne"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_text"
            android:layout_toStartOf="@+id/scoreTwo"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/team_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:layout_toStartOf="@+id/score_text"
            android:text="Team 1"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="138dp" />

        <Button
            android:id="@+id/BTN_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:text="Submit"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="421dp" />

        <TextView
            android:id="@+id/team_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/team_1_name"
            android:layout_alignBottom="@+id/team_1_name"
            android:layout_toEndOf="@+id/BTN_submit"
            android:text="Team 2"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="138dp" />

        <Spinner
            android:id="@+id/scoreTwo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_text"
            android:layout_toEndOf="@+id/score_text"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/teamOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team_1_name"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/BTN_submit"
            android:text="TextView" />

        <TextView
            android:id="@+id/teamTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/teamOne"
            android:layout_alignStart="@+id/team_2_name"
            android:text="TextView" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
