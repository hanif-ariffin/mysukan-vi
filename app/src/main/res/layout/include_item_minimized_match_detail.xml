<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/minimized_match_detail_border"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/include_item_minimized_match_detail_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_minimized_time"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="match_time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_minimized_team_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="text_team_one"
                android:gravity="center"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vs"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/vs"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_minimized_team_2"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="text_team_two"
                android:textAlignment="textStart" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>