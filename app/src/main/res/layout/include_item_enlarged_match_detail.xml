<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/include_item_enlarged_match_detail_image_team_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <TextView
        android:id="@+id/include_item_enlarged_match_detail_text_team_1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/include_item_enlarged_match_detail_image_team_1"
        app:layout_constraintTop_toBottomOf="@+id/include_item_enlarged_match_detail_image_team_1" />

    <ImageView
        android:id="@+id/include_item_enlarged_match_detail_image_team_2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_mark" />

    <TextView
        android:id="@+id/include_item_enlarged_match_detail_text_team_2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/include_item_enlarged_match_detail_image_team_2"
        app:layout_constraintTop_toBottomOf="@+id/include_item_enlarged_match_detail_image_team_2" />

    <TextView
        android:id="@+id/include_item_enlarged_match_detail_score_1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/include_item_enlarged_match_detail_image_team_1"
        app:layout_constraintRight_toLeftOf="@+id/include_item_enlarged_match_detail_image_team_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/include_item_enlarged_match_detail_score_2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/include_item_enlarged_match_detail_score_1"
        app:layout_constraintRight_toRightOf="@+id/include_item_enlarged_match_detail_score_1"
        app:layout_constraintTop_toBottomOf="@+id/include_item_enlarged_match_detail_score_1" />

    <TextView
        android:id="@+id/include_item_enlarged_match_detail_score_3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/include_item_enlarged_match_detail_score_2"
        app:layout_constraintRight_toRightOf="@+id/include_item_enlarged_match_detail_score_2"
        app:layout_constraintTop_toBottomOf="@+id/include_item_enlarged_match_detail_score_2" />

</android.support.constraint.ConstraintLayout>